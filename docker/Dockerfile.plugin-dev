# AgentOS Plugin Development Environment Dockerfile
FROM node:18-bullseye

# Install system dependencies
RUN apt-get update && apt-get install -y \
    git git-lfs \
    python3 python3-pip \
    build-essential \
    curl wget \
    vim nano \
    && rm -rf /var/lib/apt/lists/*

# Set up workspace
WORKDIR /workspace

# Install global npm packages for plugin development
RUN npm install -g \
    @angular/cli \
    @vue/cli \
    create-react-app \
    typescript \
    ts-node \
    webpack \
    webpack-cli \
    eslint \
    prettier \
    jest \
    @types/node

# Create plugin development user
RUN useradd -m -s /bin/bash plugin-dev \
    && usermod -aG sudo plugin-dev \
    && echo "plugin-dev ALL=(ALL) NOPASSWD:ALL" >> /etc/sudoers

# Switch to plugin development user
USER plugin-dev

# Set up Git configuration
RUN git config --global user.name "Plugin Developer" \
    && git config --global user.email "plugin-dev@agentos.org"

# Install Git LFS
RUN git lfs install

# Expose ports for development servers
EXPOSE 3000 8080

# Default command
CMD ["/bin/bash"]