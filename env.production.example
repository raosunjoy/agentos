# AgentOS Production Environment Configuration
# Copy this file to .env and update with your production values

# Application Configuration
NODE_ENV=production
AGENTOS_ENV=production
PORT=3000
HOST=0.0.0.0

# Logging Configuration
LOG_LEVEL=warn
LOG_DIR=/var/log/agentos
ENABLE_FILE_LOGGING=true

# Database Configuration
DATABASE_URL=postgresql://agentos_prod:secure_password@localhost:5432/agentos_prod
DB_POOL_SIZE=10
DB_SSL=true
DB_SSL_CA=/path/to/ca.crt

# Cache Configuration
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=secure_redis_password
REDIS_SSL=true

# Security Configuration
JWT_SECRET=your-256-bit-secret-key-here-change-in-production
JWT_EXPIRE=24h
BCRYPT_ROUNDS=12

# API Configuration
API_RATE_LIMIT_WINDOW=900000
API_RATE_LIMIT_MAX=1000
API_TIMEOUT=30000

# External Services
OPENWEATHER_API_KEY=your_openweather_api_key
GOOGLE_MAPS_API_KEY=your_google_maps_api_key
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=your_twilio_phone_number

# Monitoring & Observability
PROMETHEUS_ENABLED=true
GRAFANA_ENABLED=true
HEALTH_CHECK_INTERVAL=30000
METRICS_RETENTION_DAYS=30

# Feature Flags
ENABLE_PLUGINS=true
ENABLE_SECURITY=true
ENABLE_VOICE_INTERFACE=true
ENABLE_CAREGIVER_SYSTEM=true
ENABLE_PERFORMANCE_OPTIMIZATION=true

# Performance Tuning
MAX_MEMORY_USAGE=4294967296
MAX_CPU_USAGE=80
WORKER_THREADS=4
REQUEST_TIMEOUT=30000
KEEP_ALIVE_TIMEOUT=65000

# Security Headers
ENABLE_SECURITY_HEADERS=true
ENABLE_CORS=true
CORS_ORIGINS=https://yourdomain.com,https://app.yourdomain.com
ENABLE_HELMET=true
ENABLE_COMPRESSION=true

# Backup & Recovery
BACKUP_ENABLED=true
BACKUP_INTERVAL=86400000
BACKUP_RETENTION_DAYS=30
BACKUP_PATH=/var/backups/agentos

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
FROM_EMAIL=noreply@yourdomain.com

# SSL/TLS Configuration
SSL_ENABLED=true
SSL_KEY_PATH=/path/to/ssl/private.key
SSL_CERT_PATH=/path/to/ssl/certificate.crt
SSL_CA_PATH=/path/to/ssl/ca-bundle.crt

# Load Balancing
ENABLE_LOAD_BALANCER=true
LOAD_BALANCER_ALGORITHM=round_robin
HEALTH_CHECK_ENDPOINT=/health/basic
HEALTH_CHECK_INTERVAL=10000
HEALTH_CHECK_TIMEOUT=5000

# Container Configuration
DOCKER_REGISTRY=your-registry.com
DOCKER_IMAGE_TAG=latest
CONTAINER_MEMORY_LIMIT=4g
CONTAINER_CPU_LIMIT=2.0

# Kubernetes Configuration (if using k8s)
K8S_NAMESPACE=agentos-prod
K8S_REPLICAS=3
K8S_CPU_REQUEST=500m
K8S_CPU_LIMIT=2000m
K8S_MEMORY_REQUEST=2Gi
K8S_MEMORY_LIMIT=4Gi

# Cloud Configuration (AWS/GCP/Azure)
CLOUD_PROVIDER=aws
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
AWS_S3_BUCKET=agentos-prod-backups

# Monitoring & Alerting
ALERT_EMAIL=alerts@yourdomain.com
ALERT_SLACK_WEBHOOK=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
ALERT_PAGERDUTY_KEY=your-pagerduty-key

# Feature Specific Configuration
VOICE_WAKE_WORD=hey agent
VOICE_SUPPORTED_LANGUAGES=en,es,fr,de,it
NLP_CONFIDENCE_THRESHOLD=0.8
SECURITY_LEVEL=high
PLUGIN_SANDBOX_ENABLED=true

# Development Overrides (remove in production)
DEBUG=false
VERBOSE_LOGGING=false
