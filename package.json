{
  "name": "agentos",
  "version": "0.1.0",
  "description": "AgentOS - The Future of Mobile Computing",
  "main": "src/index.ts",
  "scripts": {
    "build": "tsc && webpack --mode=production",
    "build:dev": "tsc && webpack --mode=development",
    "test": "jest --coverage --watchAll=false",
    "test:watch": "jest --watch",
    "test:e2e": "cypress run",
    "test:e2e:open": "cypress open",
    "lint": "eslint src/**/*.{js,ts} --fix",
    "lint:check": "eslint src/**/*.{js,ts}",
    "format": "prettier --write src/**/*.{js,ts,json}",
    "format:check": "prettier --check src/**/*.{js,ts,json}",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "start": "node dist/index.js",
    "docs:serve": "mkdocs serve",
    "docs:build": "mkdocs build",
    "plugin:create": "node scripts/create-plugin.js",
    "plugin:build": "webpack --config webpack.plugin.config.js",
    "accessibility:test": "pa11y-ci --sitemap http://localhost:3000/sitemap.xml",
    "security:audit": "npm audit && snyk test",
    "clean": "rimraf dist build coverage .nyc_output"
  },
  "keywords": [
    "agentos",
    "mobile",
    "ai",
    "accessibility",
    "voice-interface",
    "android",
    "open-source"
  ],
  "author": "AgentOS Contributors",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/raosunjoy/agentos.git"
  },
  "bugs": {
    "url": "https://github.com/raosunjoy/agentos/issues"
  },
  "homepage": "https://github.com/raosunjoy/agentos#readme",
  "devDependencies": {
    "@types/node": "^18.15.0",
    "@types/jest": "^29.5.0",
    "@typescript-eslint/eslint-plugin": "^5.57.0",
    "@typescript-eslint/parser": "^5.57.0",
    "eslint": "^8.37.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "^29.5.0",
    "ts-jest": "^29.1.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.0.2",
    "webpack": "^5.76.0",
    "webpack-cli": "^5.0.1",
    "prettier": "^2.8.7",
    "rimraf": "^4.4.1",
    "cypress": "^12.9.0",
    "pa11y-ci": "^3.0.1",
    "snyk": "^1.1128.0",
    "@axe-core/cli": "^4.6.0"
  },
  "dependencies": {
    "express": "^4.18.2",
    "socket.io": "^4.6.1",
    "ws": "^8.13.0",
    "axios": "^1.3.4",
    "lodash": "^4.17.21",
    "uuid": "^9.0.0",
    "joi": "^17.9.1",
    "jsonwebtoken": "^9.0.0",
    "bcryptjs": "^2.4.3",
    "dotenv": "^16.0.3",
    "winston": "^3.8.2",
    "helmet": "^6.1.5",
    "cors": "^2.8.5",
    "compression": "^1.7.4",
    "rate-limiter-flexible": "^2.4.1"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ],

  "eslintConfig": {
    "extends": [
      "@typescript-eslint/recommended",
      "prettier"
    ],
    "parser": "@typescript-eslint/parser",
    "plugins": ["@typescript-eslint", "prettier"],
    "rules": {
      "prettier/prettier": "error",
      "@typescript-eslint/no-unused-vars": "error",
      "@typescript-eslint/explicit-function-return-type": "warn"
    }
  },
  "prettier": {
    "semi": true,
    "trailingComma": "es5",
    "singleQuote": true,
    "printWidth": 80,
    "tabWidth": 2
  }
}